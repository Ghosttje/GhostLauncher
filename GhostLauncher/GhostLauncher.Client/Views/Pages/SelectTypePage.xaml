<Page x:Class="GhostLauncher.Client.Views.Pages.SelectTypePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" d:DesignWidth="189.64"
	Title="New instance">
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding AddInstanceCommand}">
            <StackPanel Orientation="Vertical">
                <Image Height="256" Style="{StaticResource AddInstance}" />
                <Button Content="Add instance" FontSize="16" />
            </StackPanel>
        </Button>
        <Button Command="{Binding AddServerCommand}" IsEnabled="False">
            <StackPanel Orientation="Vertical">
                <Image Height="256" Style="{StaticResource AddServer}" />
                <Button Content="Add server instance" FontSize="16" />
            </StackPanel>
        </Button>
    </StackPanel>
</Page>
