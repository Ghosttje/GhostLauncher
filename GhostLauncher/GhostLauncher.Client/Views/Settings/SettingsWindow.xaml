<Window x:Class="GhostLauncher.Client.Views.Settings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:settings="clr-namespace:GhostLauncher.Client.Views.Settings"
        xmlns:settings1="clr-namespace:GhostLauncher.Client.ViewModels.Settings"
        xmlns:instanceLocationWizard="clr-namespace:GhostLauncher.Client.ViewModels.InstanceLocationWizard"
        xmlns:instanceLocationWizard1="clr-namespace:GhostLauncher.Client.Views.InstanceLocationWizard"
        Title="SettingsWindow" Height="600" Width="800"
        ResizeMode="CanMinimize">
    
    <Window.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type settings1:SettingsViewModel}">
                <settings:SettingsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type instanceLocationWizard:SelectInstanceLocationTypeViewModel}">
                <instanceLocationWizard1:SelectInstanceLocationTypeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type instanceLocationWizard:AddInstanceLocationViewModel}">
                <instanceLocationWizard1:AddInstanceLocationView />
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    
    <ContentPresenter DockPanel.Dock="Left" Content="{Binding SettingsContentViewModel}" />
</Window>
